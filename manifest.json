{
  "manifest_version": 2,
  "name": "videoNail",
  "description": "Keeps YouTube video on screen when scrolling down to the comment section",
  "version": "0.2.2",
  "browser_action": {},
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "videonail.css"
      ],
      "js": [
        "fontawesome-all.min.js",
        "functions.js",
        "constants.js",
        "handlers.js"
      ],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "VideoNail_x16.png",
    "32": "VideoNail_x32.png",
    "48": "VideoNail_x48.png",
    "64": "VideoNail_x64.png",
    "128": "VideoNail_x128.png"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "http://*/",
    "https://*/",
    "webNavigation",
    "storage"
  ],
  "web_accessible_resources": [
    "vnInjectedScript.js"
  ]
}