{
  "manifest_version": 2,

  "name": "VideoNail",
  "description": "This extension keeps YouTube video on screen when scrolling down to the comment section",
  "version": "0.1",
  "icons": {
    "64": "Youtube.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts":
  [
    {
      "matches": ["https://www.youtube.com/watch?v=*"],
      "js": ["content.js"],
      "css": ["videonail.css"]
    }
  ],
  "permissions": [
    "tabs",
    "https://www.youtube.com/"
  ]
}