{
  "manifest_version": 2,

  "name": "videoNail",
  "description": "This extension keeps YouTube video on screen when scrolling down to the comment section",
  "version": "0.0.7",
  "icons": {
    "64": "Youtube.png"
  },
  "browser_action": {
    "default_icon": "Youtube.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts":
  [
    {
      "matches": ["https://www.youtube.com/watch?v=*"],
      "js": ["content.js"],
      "css": ["videonail.css"]
    }
  ],
  "permissions": [
    // need this in order to use chrome.tabs.onUpdated
    "tabs",
    "https://www.youtube.com/"
  ],
  "web_accessible_resources": ["iframe.js", "toggle.js", "removeVideoNail.js"]
}