{
  "manifest_version": 2,
  "name": "videoNail",
  "description":
    "This extension keeps YouTube video on screen when scrolling down to the comment section",
  "version": "0.2.0",
  "browser_action": {},
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "css": ["videonail.css"],
      "js": ["fontawesome-all.min.js", "videonail.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "YouTube.png",
    "32": "YouTube.png",
    "64": "YouTube.png",
    "128": "YouTube.png"
  }
}