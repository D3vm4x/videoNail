{
  "manifest_version": 2,
  "name": "videoNail",
  "description":
    "Keeps YouTube video on screen when scrolling down to the comment section",
  "version": "0.2.1",
  "browser_action": {},
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/watch?*"],
      "css": ["videonail.css"],
      "js": ["fontawesome-all.min.js", "videonail.js"],
      "run_at": "document_end"
    },
    {
      "matches": [
        "*://www.youtube.com/",
        "*://www.youtube.com/feed/*",
        "*://www.youtube.com/channel/*",
        "*://www.youtube.com/playlist?*"
      ],
      "js": ["otherPage.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "VideoNail_x16.png",
    "32": "VideoNail_x32.png",
    "48": "VideoNail_x48.png",
    "64": "VideoNail_x64.png",
    "128": "VideoNail_x128.png"
  },
  "web_accessible_resources": ["vidEventHandlers.js"]
}