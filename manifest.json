{
  "manifest_version": 2,

  "name": "videoNail",
  "description": "This extension keeps YouTube video on screen when scrolling down to the comment section",
  "version": "0.1.0",
  "icons": {
    "32": "YouTube.png",
    "64": "YouTube.png"
  },
  "browser_action": {},
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts":
  [
    {
      "matches": ["https://www.youtube.com/watch?*"],
      "js": ["content.js"],
      "css": ["videonail.css"]
    }
  ],
  "permissions": [
    "tabs",
    "https://www.youtube.com/"
  ],
  "web_accessible_resources": ["iframe.js", "toggle.js", "removeScripts.js"]
}