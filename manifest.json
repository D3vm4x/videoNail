{
  "manifest_version": 2,
  "name": "videoNail",
  "description": "This extension keeps YouTube video on screen when scrolling down to the comment section",
  "version": "0.1.6",
  "icons": {
    "32": "YouTube.png",
    "64": "YouTube.png"
  },
  "browser_action": {},
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/watch?*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "videonail.css"
      ]
    },
    {
      "matches": [
        "https://www.youtube.com/",
        "https://www.youtube.com/feed/trending",
        "https://www.youtube.com/feed/subscriptions*"
      ],
      "js": [
        "otherPage.js" 
      ],
      "css": [
        "videonail.css"
      ]
    }
  ],
  "permissions": [
    "tabs",
    "https://www.youtube.com/"
  ],
  "web_accessible_resources": [
    "iframe.js"
  ]
}